global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend Local_Server
    bind *:443 ssl crt /etc/haproxy/binthia.tech.pem
    mode http
    default_backend Web_Servers

backend Web_Servers
    balance roundrobin
    mode http
    server web-01 52.90.85.7:80 check
    server web-02 13.219.80.146:80 check
